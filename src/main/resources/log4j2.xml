<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %-5p [%t] (%F:%L) - %m%n"/>
    </Console>
    <File name="ServerDailyRollingFile" fileName="result.log" advertiseURI="file://HelloGradle/result.log" append="true">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %p [%c] %m%n"/>
    </File>
  </Appenders>
  <Loggers>
    <Logger name="com.hello" level="INFO">
      <AppenderRef ref="STDOUT" />
    </Logger>
    <!-- <Logger name="com.hello" level="info">
      <AppenderRef ref="ServerDailyRollingFile"/>
    </Logger> 
    <Root level="warn">
      <AppenderRef ref="STDOUT"/>
    </Root> -->
  </Loggers>
</Configuration>
